    "mini-css-extract-plugin": "^1.3.9",
    "postcss": "^8.2.9",
    "postcss-loader": "^5.2.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.4",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "url-loader": "^4.1.1",
    "vue-cli-plugin-vue-next": "~0.1.4",
    "vue-eslint-parser": "^7.6.0",
    "vue-loader": "^16.1.2",
    "vue-style-loader": "^4.1.3",
    "web-ext": "^6.0.0",
