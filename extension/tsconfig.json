{
  "compilerOptions": {
    "baseUrl": "src",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types"
    ],
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "ES2019"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": false, // false because of compiler producing bullshit
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false, // false because of https://github.com/vuejs/vue-next/issues/4668
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictPropertyInitialization": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}