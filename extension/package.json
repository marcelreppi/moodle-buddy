{
  "name": "moodle-buddy",
  "version": "2.0.0",
  "displayName": "Moodle Buddy",
  "description": "Moodle Buddy offers mass file download and notification functionality for the moodle learning management platform.",
  "author": "Marcel Reppenhagen",
  "main": "manifest.json",
  "license": "AGPL-3.0",
  "scripts": {
    "dev:prepare": "node scripts/prepare.js",
    "start": "npm run start:nightly",
    "start:nightly": "web-ext run --source-dir ./build --firefox=nightly --browser-console",
    "start:ff": "web-ext run --source-dir ./build --browser-console",
    "start:chrome": "web-ext run --source-dir ./build --target=chromium --browser-console",
    "dev": "npm run dev:ff",
    "dev:ff": "npm run nuke && cross-env NODE_ENV=development TARGET=firefox webpack",
    "dev:chrome": "npm run nuke && cross-env NODE_ENV=development TARGET=chrome webpack",
    "debug:ff": "npm run nuke && cross-env NODE_ENV=debug TARGET=firefox webpack",
    "build:ff": "npm run nuke && cross-env NODE_ENV=production webpack",
    "nuke": "rimraf build",
    "publish": "cd scripts && sh build.sh",
    "test": "cd test && node --max-old-space-size=4096 -r esm index.js",
    "lint": "tsc --noEmit",
    "lint:manifest": "web-ext lint --source-dir ./build",
    "prettify": "prettier --check .",
    "prettify:fix": "prettier --write .",
    "release": "cd scripts && sh release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcelreppi/moodle-buddy.git"
  },
  "bugs": {
    "url": "https://github.com/marcelreppi/moodle-buddy/issues"
  },
  "dependencies": {
    "@aacassandra/vue3-progressbar": "^1.0.3",
    "@heroicons/vue": "^1.0.5",
    "linkedom": "0.14.19",
    "p-limit": "^3.1.0",
    "sanitize-filename": "^1.6.3",
    "sha.js": "^2.4.11",
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@types/chrome": "0.0.200",
    "@types/node": "^16.11.3",
    "@types/p-limit": "^2.2.0",
    "@types/sha.js": "^2.4.0",
    "@types/webextension-polyfill": "^0.9.2",
    "autoprefixer": "^10.4.0",
    "chokidar": "3.5.3",
    "copy-webpack-plugin": "^8.1.1",
    "create-file-webpack": "1.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.4",
    "dotenv-webpack": "^7.0.2",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.5",
    "postcss-loader": "^5.2.0",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "tailwindcss": "^3.0.2",
    "terser-webpack-plugin": "^5.1.1",
    "touch": "3.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "vue-loader": "^16.8.3",
    "vue-style-loader": "^4.1.3",
    "web-ext": "^7.3.1",
    "webextension-polyfill": "^0.10.0",
    "webpack": "^5.35.1",
    "webpack-cli": "^4.6.0",
    "webpack-watch-external-files-plugin": "1.0.0",
    "webpack-watch-files-plugin": "1.2.1"
  }
}
