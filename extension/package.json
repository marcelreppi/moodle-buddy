{
  "name": "moodle-buddy",
  "version": "1.0.0",
  "author": "Marcel Reppenhagen",
  "scripts": {
    "start": "web-ext run -s ./build --firefox=nightly",
    "start:ff": "web-ext run -s ./build",
    "dev": "npm run nuke && webpack --watch",
    "debug": "npm run nuke && cross-env NODE_ENV=debug webpack --watch",
    "build": "npm run nuke && cross-env NODE_ENV=production webpack",
    "nuke": "rm -rf build",
    "publish": "cd scripts && sh build.sh",
    "test": "cd test && node --max-old-space-size=4096 -r esm index.js",
    "lint": "tsc --noEmit",
    "prettify": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcelreppi/moodle-buddy.git"
  },
  "bugs": {
    "url": "https://github.com/marcelreppi/moodle-buddy/issues"
  },
  "dependencies": {
    "@aacassandra/vue3-progressbar": "^1.0.3",
    "@heroicons/vue": "^1.0.5",
    "p-limit": "^3.1.0",
    "sanitize-filename": "^1.6.3",
    "sha.js": "^2.4.11",
    "vue": "^3.2.20"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.13.15",
    "@tailwindcss/jit": "^0.1.18",
    "@types/node": "^16.11.3",
    "@types/p-limit": "^2.2.0",
    "@types/sha.js": "^2.4.0",
    "@vue/compiler-sfc": "^3.2.20",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^8.1.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.4",
    "dotenv-webpack": "^7.0.2",
    "jsdom": "^16.5.3",
    "postcss": "^8.2.12",
    "postcss-loader": "^5.2.0",
    "prettier": "2.2.1",
    "tailwindcss": "^2.1.2",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.2.4",
    "vue-loader": "^16.8.3",
    "vue-style-loader": "^4.1.3",
    "web-ext": "^6.1.0",
    "web-ext-types": "^3.2.1",
    "webextension-polyfill": "^0.8.0",
    "webpack": "^5.35.1",
    "webpack-cli": "^4.6.0"
  }
}
